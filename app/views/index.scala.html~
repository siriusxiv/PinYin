@(sounds: List[String])
@main("PinYin trainer"){
<style>
audio{
	position:relative;
	top:6px;
}
</style>	
	<ol>
	@for(i:Int <- 0 to sounds.size()-1){
		<li>
		<audio controls>
  		<source src="/assets/sounds/@{sounds.get(i)+".ogg"}" type="audio/ogg">
  		<source src="/assets/sounds/@{sounds.get(i)+".mp3"}" type="audio/mpeg">
 		Your browser does not support the audio tag.
		</audio>
		<button onClick="show(@i)">Show answer</button>
		<span id="resultat@i" style="display:none">@sounds.get(i)</span>
		</li>
	}
	</ol>
<script>
function show(i){
	$('#resultat'+i).attr('style','display:inline');
}
</script>
}
